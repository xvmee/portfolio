{
  "version": 2,
  "builds": [
    { 
      "src": "server/index.ts", 
      "use": "@vercel/node"
    },
    {
      "src": "client/**",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    { 
      "src": "/api/(.*)", 
      "dest": "server/index.ts" 
    },
    { 
      "src": "/uploads/(.*)", 
      "dest": "server/index.ts" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/client/$1" 
    }
  ]
}